@model List<AppUser>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<br />
<h2>Üyeler</h2>
<table class="table table-bordered table-striped">
    <tr>
        @*<td>User Id</td>*@
        <td>Kullanıcı Adı</td>
        <td>E-Posta</td>
        <td>Roller</td>
        <td>Rol Atama</td>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3">Hiçbir Üye Yoktur!!!</td>
        </tr>
    }
    else
    {
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.UserName</td>
                <td>@x.Email</td>
                <td user-roles="@x.Id"></td>
                <td><a class="btn btn-outline-success" asp-action="RoleAssign" asp-route-id="@x.Id">Rol Ata</a></td>
            </tr>
        }
    }
</table>

