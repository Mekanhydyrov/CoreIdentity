@model UdemyIdentity.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Giriş Yap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/GirisYap/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/GirisYap/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/GirisYap/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter" style="width:100%" ;>
        <div class="container-login100">
            <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                <form class="login100-form validate-form" asp-action="Login" method="post">
                    <span class="login100-form-title p-b-55">
                        Giriş Yap
                    </span>
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="wrap-input100 validate-input m-b-16" data-validate="E-Posta Adresi Gereklidir!">
                        <input class="input100" asp-for="Email" placeholder="E-Posta Adresiniz!">
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <span class="lnr lnr-envelope"></span>
                        </span>
                    </div>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="Şifreniz Gereklidir!">
                        <input class="input100" asp-for="Password" placeholder="Şifreniz">
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <span class="lnr lnr-lock"></span>
                        </span>
                    </div>

                    <div class="contact100-form-checkbox m-l-4">
                        <input class="input-checkbox100" id="ckb1" type="checkbox"  asp-for="RememberMe">
                        <label class="label-checkbox100" for="ckb1">
                            Beni Hatırla
                        </label>
                    </div>

                    <div class="container-login100-form-btn p-t-25">
                        <input class="login100-form-btn" value="Giris Yap" type="submit" />


                    </div>

                    <div class="text-center w-full p-t-42 p-b-22">
                        <span class="txt1">
                            Veya
                        </span>
                    </div>

                    <a href="#" class="btn-face m-b-10">
                        <i class="fa fa-facebook-official"></i>
                        Facebook
                    </a>

                    <a href="#" class="btn-google m-b-10">
                        <img src="~/GirisYap/images/icons/icon-google.png" alt="GOOGLE">
                        Google
                    </a>

                    <div class="text-center" style="margin:20px;">
                        @*<span class="txt1">
                            Üye değil misin?
                        </span>*@

                        <a class="txt1 bo1 hov1" asp-action="ResetPassword">
                            Şifremi Unuttum
                        </a>
                    </div>
                    <div class="text-center" style="margin:20px;">
                        <span class="txt1">
                            Üye değil misin?
                        </span>

                        <a class="txt1 bo1 hov1" asp-action="SignUp">
                            Kayıt Ol
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/GirisYap/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/GirisYap/vendor/bootstrap/js/popper.js"></script>
    <script src="~/GirisYap/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/GirisYap/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/GirisYap/js/main.js"></script>

</body>
</html>


